  ## ACTION ADD
  #if ($request.action == "add")
    #set ($display = false)
    $xwiki.chronopolys.addProjectContainer($request.type, "$!{request.parent}")
  ## END ACTION ADD
  #end
  ## ACTION DELETE
  #if ($request.action == "delete")
    #set ($display = false)
    $xwiki.chronopolys.deleteProjectContainer($pcuid)
  ## END ACTION MOVEDOWN
  #end
  ## ACTION MOVEUP
  #if ($request.action == "moveup")
