#end
#macro(displayMyDeadlines $border-color)
&lt;table width="162px"&gt;
  #foreach($item in $xwiki.chronopolys.getMyNextDeadlines(5))
    #set ($cdate = $xwiki.formatDate($item.getDate(), "dd/MM/yyyy"))
    #set ($pdoc = $xwiki.getDocument("${xwiki.getDocument($item.getPage()).getSpace()}.WebHome"))
    &lt;tr&gt;
      &lt;td class="leftpanelcolumn" style="background-color:$xwiki.chronopolys.getProjectContainerStyle($pdoc.display("container", "view"));border-color:$border-color;"&gt;
      &lt;/td&gt;
      &lt;td style="padding-left:3px;"&gt;
        &lt;a href="$xwiki.getURL($item.getPage())" title="$msg.get("deadline$item.getType()") $cdate"&gt;$item.getName()&lt;/a&gt;
      &lt;/td&gt;
    &lt;/tr&gt;
  #end
&lt;/table&gt;
#end
