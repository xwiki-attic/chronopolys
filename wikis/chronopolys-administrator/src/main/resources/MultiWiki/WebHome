{pre}
&lt;script type="text/javascript"&gt;
&lt;!--
function checkWikiName(field1) {
  var name = field1.value;
  var result = (name.match(/^[a-zA-Z0-9]+$/)!=null);
  if (!result)
   alert("The wiki name should only contain alphanumerical caracters.");
  return result;
}
// --&gt;
&lt;/script&gt;
{/pre}
